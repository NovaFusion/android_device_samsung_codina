<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.teamcanjica.settings.device"
    android:sharedUserId="android.uid.system"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="19"
          android:targetSdkVersion="19"
          android:maxSdkVersion="19" />

    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.WRITE_SECURE_SETTINGS" />
    <uses-permission android:name="android.permission.ACCESS_SUPERUSER"/>

    <application android:label="@string/app_name"
            android:icon="@drawable/ace2settings_icon"
            android:allowBackup="true" >
        <activity
            android:name="com.teamcanjica.settings.device.DeviceSettings"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <receiver android:name="com.teamcanjica.settings.device.Startup">
            <intent-filter android:priority="100">
                <action android:name="android.intent.action.BOOT_COMPLETED" />
            </intent-filter>
        </receiver>

		<activity android:name="com.teamcanjica.settings.device.ContainerActivity" />
		<activity android:name="com.teamcanjica.settings.device.NetworkFragmentActivity" />
		<activity android:name="com.teamcanjica.settings.device.USBFragmentActivity" />
		<activity android:name="com.teamcanjica.settings.device.AudioFragmentActivity" />
		<activity android:name="com.teamcanjica.settings.device.ScreenFragmentActivity" />
		<activity android:name="com.teamcanjica.settings.device.PowermgmtFragmentActivity" />
		<activity android:name="com.teamcanjica.settings.device.AdvancedFragmentActivity" />
        
    </application>
</manifest>
